<div class="container-fluid">
<div class="row justify-content-center">
<div class="col-12 col-sm-6 col-md-3">
  <h2 class="text-center">Iniciar Sesion</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
        <div class="form-group">
          <%= f.label :email, "Correo Electronico"%><br>
          <%= f.email_field :email, autofocus: true, autocomplete: true,class: "form-control" %>  
        </div>

        <div class="form-group">
          <%= f.label :password, "Contraseña"%><br/>
          <%= f.password_field :password, autocomplete: "off", class: "form-control"%>
        </div>

          <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Recordar Contraña"%>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.submit "Iniciar Sesion", class: "btn btn-primary btn-block text-uppcase"%>
        </div>
      <%end%>
      <%= render "devise/shared/links" %>
      
   </div>
  </div>
</div>